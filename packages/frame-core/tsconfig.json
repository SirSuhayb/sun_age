{
  "include": ["src"],
  "exclude": ["esm", "dist", "build", "node_modules", "test-import.ts", "**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "esm",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false
  }
}
